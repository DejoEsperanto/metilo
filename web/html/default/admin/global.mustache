        <title>{{title}} | {{siteName}}</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="/assets/css/admin/global.css?v={{metiloVersion}}">
        <link rel="stylesheet" href="https://cdn.quilljs.com/1.3.2/quill.snow.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.30.0/codemirror.min.css">
        {{#includeStyles}}
        <link rel="stylesheet" href="{{&.}}">
        {{/includeStyles}}
    </head>
    <body data-subsite="{{subsite}}">
        <div id="main-wrapper" {{#vcenter}}class="vcenter"{{/vcenter}}>
            <header>
                <select id="select-language">
                    {{#locales}}
                    <option value="{{code}}" {{#active}}selected{{/active}}>{{name}}</option>
                    {{/locales}}
                </select>
                {{^hideHeader}}
                <div>{{&welcome}}</div>
                <div>{{&logout}}</div>
                {{/hideHeader}}
            </header>
            <main>{{&main}}</main>
        </div>
        <footer>{{&copyright.local}}â€”{{&copyright.metilo}}</footer>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.2.0/js.cookie.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/picomodal/3.0.0/picoModal.min.js"></script>
        <script src="https://cdn.quilljs.com/1.3.2/quill.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.30.0/codemirror.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.30.0/mode/xml/xml.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.30.0/mode/htmlmixed/htmlmixed.min.js"></script>
        <script src="/assets/js/admin/global.js?v={{metiloVersion}}"></script>
        <script>
            C.baseURL = "{{&subsiteURL}}";
            C.str = {
                imageURL: "{{textEditor.imageURL}}",
                modal: {
                    buttons: {
                        cancel: "{{modal.buttons.cancel}}",
                        insert: "{{modal.buttons.insert}}"
                    }
                }
            };
        </script>
        {{#includeScripts}}
        <script src="{{&.}}"></script>
        {{/includeScripts}}
    </body>
</html>
